<ul class="list-disc ml-5 space-y-1">
   {posts.map((post) => (
    <li>
      <a href={`/post/${post.slug.current}`} class="text-yellow-400 underline text-sm mb-6">
        {post.title}
      </a>
    </li>
  ))}
    </ul>
  </article>
</Layout>
